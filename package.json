{
  "name": "minutes-timer",
  "version": "1.0.0",
  "description": "Simple minutes and seconds timer with a lot of features, works on javascript client and server side",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "setup": "npm install",
    "clean": "shx rm -rf dist/ docs/",
    "build": "npm run tslint && npm run build-ts",
    "test-only": "mocha --opts ./mocha.opts $(find . -name 'test_*.spec.ts' ! -ipath '*node_modules*') --reporter spec",
    "test": "nyc --reporter=json --reporter=text npm run test-only",
    "test:watch": "npm test -- --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build-ts": "tsc -d",
    "watch-ts": "tsc -w",
    "prepare": "npm run clean && npm run tslint && npm run test && npm run build-ts",
    "typedoc": "typedoc --out ./docs ./src/",
    "posttypedoc": "shx cp .nojekyll docs/.nojekyll"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mblenton/MinutesTimer.git"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": "src",
    "exclude": [
      "**/*.spec.ts",
      "**/*.json.ts",
      "**/dist/**"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "minutes",
    "timer",
    "minute",
    "counter",
    "count",
    "javascript",
    "typescript"
  ],
  "author": "Milan Rakos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mblenton/MinutesTimer/issues"
  },
  "homepage": "https://github.com/mblenton/MinutesTimer#readme",
  "readmeFilename": "README.md",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "5.2.5",
    "@types/node": "^10.9.4",
    "@types/sinon": "^5.0.7",
    "chai": "^4.1.2",
    "codecov": "^3.1.0",
    "concurrently": "^4.0.1",
    "cross-env": "^5.1.3",
    "istanbul": "^0.4.5",
    "mocha": "5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "shx": "^0.3.2",
    "sinon": "^7.1.1",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "3.0.3"
  }
}
